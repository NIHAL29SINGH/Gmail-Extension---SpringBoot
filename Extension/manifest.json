{
  "name": "Omni-Box",
  "description": "AI-Powered Email Reply Generator",
  "version": "1.1",
  "manifest_version": 3,

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:8080/*",
    "https://mail.google.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Omni-Box"
  }
}
